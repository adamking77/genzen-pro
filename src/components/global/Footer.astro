---
// Assets
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Section from "@/components/fundations/containers/Section.astro";
// Content
const navigation = {
  social: [
    {
      name: "X",
      href: "#",
    },
    {
      name: "Instagram",
      href: "#",
    },
    {
      name: "GitHub",
      href: "#",
    },
    {
      name: "YouTube",
      href: "#",
    },
  ],
};
---

<Section>
  <Wrapper variant="standard" class="py-12">
    <div class="flex flex-col items-center justify-between gap-4 sm:flex-row">
      <Text tag="p" variant="textSM" class="text-accent-500">
        &copy; 2017-2025 GenZen. All rights reserved.
      </Text>
      <div class="flex gap-4">
        {
          navigation.social.map((item) => (
            <a
              href={item.href}
              class="text-accent-500 hover:text-pink-500 duration-200"
            >
              <span class="sr-only">{item.name}</span>
              {item.name}
            </a>
          ))
        }
      </div>
    </div>
  </Wrapper>
</Section>
