---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Section from "@/components/fundations/containers/Section.astro";
---

<Section>
  <Wrapper variant="standardWide" class="px-8 py-12 lg:pt-24">
    <div class="grid items-end gap-4 lg:grid-cols-3 max-w-5xl mx-auto">
      <div class="lg:col-span-2">
        <Text
          tag="h1"
          variant="displayXL"
          class="tracking-tighter font-display text-accent-800 text-balance"
        >
          Web development and creative agency
        </Text>
      </div>
      <Text tag="p" variant="textBase" class="font-medium text-accent-500">
        We are a team of creatives and developers who work together to create a
        unique and engaging experience for our clients.
      </Text>
    </div>
  </Wrapper>
</Section>
