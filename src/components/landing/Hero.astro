---
// Assets
import { Image } from "astro:assets";
import One from "@/images/1.png";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Marquee
export const tags = [
  "web development",
  "UI design",
  "UX design",
  "marketing",
  "copywriting",
];
const repeated = Array(20).fill(tags.join(" — ")).join(" — ");
---

<section class="bg-white overflow-hidden relative">
  <Wrapper variant="standardWide" class="px-8 pb-0 py-12 lg:pt-24">
    <div class="grid items-end gap-4 lg:grid-cols-3 max-w-5xl mx-auto">
      <div class="lg:col-span-2">
        <Text
          tag="h1"
          variant="displayXL"
          class="tracking-tighter font-display text-accent-800 text-balance"
        >
          Web development and creative agency
        </Text>
      </div>
      <Text tag="p" variant="textBase" class="font-medium text-accent-500">
        We are a team of creatives and developers who work together to create a
        unique and engaging experience for our clients.
      </Text>
    </div>
    <Image
      width="1200"
      height="630"
      class="w-full max-h-[80vh] rounded-t-2xl relative object-cover object-top mt-12"
      src={One}
      alt="#_"
    />
    <div
      class="bg-accent-200 text-accent-600 font-medium relative rounded-b-2xl z-10 py-2 px-4 bottom-0 w-full overflow-x-hidden"
    >
      <div class="items-center relative animate-marquee flex whitespace-nowrap">
        {repeated}
      </div>
    </div>
  </Wrapper>
</section>
