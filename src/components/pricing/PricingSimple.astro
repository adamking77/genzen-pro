---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Button from "@/components/fundations/elements/Button.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import Highlights from "@/components/services/Highlights.astro";
// Content
const allServices = await getCollection("services");
import { getCollection } from "astro:content";
---

<section class="bg-white overflow-hidden relative">
  <Wrapper variant="standard" class="pt-24 lg:pt-32 pb-12">
    <div class="relative">
      <div class="w-full max-w-xl">
        <Text
          tag="h1"
          variant="displayLG"
          class="tracking-tight font-display text-accent-800 text-balance"
        >
          We partner with founders to visualise their purpose.
        </Text>
        <Text
          tag="p"
          variant="textXL"
          class="text-accent-500 mt-8 text-balance"
        >
          We charge $20,000/month. Projects take 1-3 months.
        </Text>
      </div>
      <div
        class="flex flex-col flex-shrink-0 gap-8 md:flex-row md:gap-12 mt-12 md:items-center"
      >
        <ul role="list" class="flex flex-col gap-y-2 w-full">
          {
            allServices
              .slice(0, 6)
              .map((post) => <Highlights service={post.data.service} />)
          }
        </ul>
        <Button
          href="/forms/contact"
          variant="accent"
          size="lg"
          class="w-auto"
        >
          Contact
        </Button>
      </div>
    </div>
  </Wrapper>
</section>
