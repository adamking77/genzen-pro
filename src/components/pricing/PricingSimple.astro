---
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Content
const services = [
  "3D Design",
  "Design systems",
  "Motion Design",
  "Product Design",
  "UI/UX Design",
  "Web Development"
];
---

<section class="bg-white overflow-hidden relative">
  <Wrapper variant="standard" class="pt-24 lg:pt-32 pb-12">
    <div class="relative">
      <div class="w-full max-w-xl">
        <Text
          tag="h1"
          variant="displayLG"
          class="tracking-tight font-display text-accent-800 text-balance"
        >
          We partner with founders to visualise their purpose.
        </Text>
        <Text
          tag="p"
          variant="textXL"
          class="text-accent-500 mt-8 text-balance"
        >
          We charge $20,000/month. Projects take 1-3 months.
        </Text>
      </div>
      <div class="mt-12">
        <ul role="list" class="flex flex-col gap-y-2 w-full list-disc pl-5">
          {
            services.map((service) => (
              <li>
                <Text
                  tag="span"
                  variant="textBase"
                  class="text-accent-500"
                >
                  {service}
                </Text>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </Wrapper>
</section>
