---
// Assets
import Shape2 from "@/components/assets/Shape2.astro";
// Fundations
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
// Components
import Highlights from "@/components/services/Highlights.astro";
// Content
const allServices = await getCollection("services");
import { getCollection } from "astro:content";
---

<section class="bg-white overflow-hidden relative">
  <Wrapper variant="standard" class="pt-24 lg:pt-32 pb-12">
    <Shape2
      class="absolute w-full h-full opacity-[0.2] z-0 -right-64 sm:-right-90 -bottom-85 lg:scale-110"
    />
    <div class="relative">
      <div class="w-full max-w-xl">
        <Text
          tag="h1"
          variant="displayLG"
          class="tracking-tight font-display text-accent-800 text-balance"
        >
          We partner with founders to visualise their purpose.
        </Text>
        <Text
          tag="p"
          variant="textXL"
          class="text-accent-500 mt-8 text-balance"
        >
          We charge $20,000/month. Projects take 1-3 months.
        </Text>
      </div>
      <div
        class="flex flex-col flex-shrink-0 gap-8 md:flex-row md:gap-12 mt-12 md:items-center"
      >
        <ul role="list" class="flex flex-col gap-y-2 w-full">
          {
            allServices
              .slice(0, 6)
              .map((post) => <Highlights service={post.data.service} />)
          }
        </ul>
        <a
          href="/forms/contact"
          class="flex size-32 text-sm md:text-base lg:text-2xl xl:text-3xl text-center md:size-32 shrink-0 lg:size-52 2xl:size-64 text-white hover:bg-base-900 hover:text-base-200 duration-300 items-center justify-center rounded-full bg-accent-600"
        >
          Contact
        </a>
      </div>
    </div>
  </Wrapper>
</section>
