---
// Assets
import { Image } from "astro:assets";
// Fundations
import BaseLayout from "./BaseLayout.astro";
import Text from "@/components/fundations/elements/Text.astro";
import Wrapper from "@/components/fundations/containers/Wrapper.astro";
import Section from "@/components/fundations/containers/Section.astro";
import { getEntry } from "astro:content";
import { formatDate } from "@/utils";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
}

const { post } = Astro.props;
const { Content } = await post.render();
const author = await getEntry("team", post.data.author);
---

<BaseLayout>
  <Section>
    <div class="prose prose-lg mx-auto">
      <div class="mb-8">
        <h1 class="mb-2">{post.data.title}</h1>
        <div class="flex items-center gap-4 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            {author && (
              <>
                <Image
                  src={author.data.avatar.url}
                  alt={author.data.name}
                  width={32}
                  height={32}
                  class="w-8 h-8 rounded-full"
                />
                <span>{author.data.name}</span>
              </>
            )}
          </div>
          <time datetime={post.data.pubDate.toISOString()}>
            {formatDate(post.data.pubDate)}
          </time>
        </div>
        {
          post.data.tags && (
            <div class="flex gap-2 mt-4">
              {post.data.tags.map((tag) => (
                <span class="px-2 py-1 bg-gray-100 rounded-full text-sm">
                  {tag}
                </span>
              ))}
            </div>
          )
        }
      </div>
      <Content />
    </div>
  </Section>
</BaseLayout>
