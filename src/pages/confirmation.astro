---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You">
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <div class="bg-white p-8 rounded-lg shadow-sm">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-8 h-8 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
          <h1 class="text-3xl font-bold mb-4">Thank You!</h1>
          <p class="text-gray-600 mb-8">Your message has been successfully sent. We'll get back to you as soon as possible.</p>
          <div class="space-y-4">
            <p class="text-gray-600">What happens next?</p>
            <ul class="text-left text-gray-600 space-y-2">
              <li class="flex items-center">
                <span class="text-primary mr-2">✓</span>
                We'll review your message within 24 hours
              </li>
              <li class="flex items-center">
                <span class="text-primary mr-2">✓</span>
                Our team will prepare a personalized response
              </li>
              <li class="flex items-center">
                <span class="text-primary mr-2">✓</span>
                We'll reach out to discuss your needs in detail
              </li>
            </ul>
          </div>
          <div class="mt-8">
            <a href="/" class="text-primary hover:text-blue-600 font-semibold">Return to Homepage</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout> 